{
    "manifest_version": 3,
    "name": "PR Script - Auto PR Description Generator",
    "version": "1.0",
    "description": "Automatically generate PR titles and descriptions from commit messages using AI",
    "permissions": [
      "activeTab", 
      "scripting", 
      "storage"
    ],
    "host_permissions": [
      "https://github.com/*",
      "https://openrouter.ai/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Generate PR Description"
    },
    "content_scripts": [
      {
        "matches": [
          "https://github.com/*/compare/*",
          "https://github.com/*/pull/new/*",
          "https://github.com/*/pull/*/edit"
        ],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "background": {
      "service_worker": "background.js",
          "type": "module"

    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon16.png",
      "128": "icons/icon16.png"
    }
  }
  